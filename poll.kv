<PollSection>:
    name: "PollSection"
    
    id: PollSection
    
    total_label: total_label

    progress1: progress1
    progress2: progress2
    progress3: progress3
    progress4: progress4

    
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDToolbar:
            pos_hint: {'top': 1}
            size_hint: 1,.05
            right_action_items: [["home", lambda _: setattr(root.manager, 'current', 'home_sida')],["account-outline", lambda _: setattr(root.manager, 'current', 'sign_in')] ] 
            left_action_items: [["rotate-3d-variant", lambda x: root.flip()]] 
        
        MDFloatLayout:
            size_hint: .8, .1
            pos_hint: {"center_x": .5, "center_y": .75 }
            canvas: 
                Color:
                    rgb: 1, 1, 1, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

                    texture: 
                        Gradient.horizontal(
                        get_color_from_hex("#FDC830"), 
                        get_color_from_hex("#F37335"))
                    
                    
            MDLabel:
                id: que_label
                text: "Hur är det på rasterna?"
                theme_text_color: "Custom"
                text_color: 1, 1 , 1, 1
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                bold: True
                italic: True
                font_size: "28sp" 
            
            MDIconButton:
                icon: "pencil-outline"
                pos_hint: {"center_x": .95, "center_y": .7}
        			
                
        ButtonCard:
            id: option1_knappen
            md_bg_color: 241/255, 241/255, 241/255, 1
            size_hint: .5, .1
            pos_hint: {"center_x": .5, "center_y": .6}
            radius: [10]
            padding: "10dp"
            on_release: root.count(self)
            
            MDFloatLayout:
                MDLabel:
                    text: "Jättebra"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    font_size: "20sp"
                MDLabel:
                    id: text1
                    text: ""
                    halign: "right"
                    pos_hint: {"center_x": .51, "center_y": .7}
                    font_size: "20sp"
                MDProgressBar:
                    id: progress1
                    value: 0
                    pos_hint: {"center_x": .5, "center_y": .1}
                    color: 14/255, 230/255, 17/255, 1
        ButtonCard:
            id: option2_knappen
