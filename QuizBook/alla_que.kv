MDScreen:
    name: "alla_que.kv"
    
    canvas:
        Color:
            rgb: 1, 1, 1, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10,10, 10]
            texture:
                Gradient.horizontal(
                get_color_from_hex("7F00FF"), 
                get_color_from_hex("E100FF"), 
                )

    ScrollView:
        GridLayout:
            id: grid
            cols: 1
            padding: 30, 30
            spacing: 30, 30
            size_hint_y: None
            height: self.minimum_height
            row_default_height: 280
    NavBar:
        size_hint: .6, .1
        pos_hint: {'center_x': 0.5,'center_y': 0.1}
        elevation: 10
        md_bg_color: 1, 1, 1, 1
        radius: [16]
        MDIconButton:
            icon: "home"
            ripple_scale: 0
            user_font_size: "30sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            theme_text_color: "Custom"
            text_color: get_color_from_hex("E100FF")
            on_release: app.root.transition.direction = 'left'; app.replay();  
        MDIconButton:
            icon: "replay"
            ripple_scale: 0
            user_font_size: "30sp"
            pos_hint: {'center_x': 0.2,'center_y': 0.5}
            theme_text_color: "Custom"
            text_color: get_color_from_hex("E100FF")
            on_release: app.root.transition.direction = 'left'; app.replay();  
        
        MDIconButton:
            icon: "arrow-left"
            on_release: root.manager.current=  "winner"
            pos_hint: {'center_x': 0.8,'center_y': 0.5}
            theme_text_color: "Custom"
            text_color: get_color_from_hex("E100FF")
            user_font_size: "30sp"
            ripple_scale: 0

<ImageResultMode>:
    padding: "12dp", "24dp", "12dp", "24dp"
    orientation: "vertical"
    radius: 24

    
    image_question:''
    image_title: ''
    image_true: ''
    image_your_option: ''

    check_image_color: ''
    check_image_text: ''
    image_color: ''

    MDFloatLayout:
        size_hint: .1, .1
        pos_hint: {'center_x': 0.9,'center_y': 0.95}
        
        MDIconButton:
            icon: root.check_image_text
            ripple_scale: 0
            user_font_size: "20sp"
            pos_hint: {"center_x": .95, "y": .15}
            theme_text_color: "Custom"
            text_color: root.check_image_color


    MDCard:
        size_hint: 1, .2
        pos_hint: {'center_x': 0.5,'center_y': .65}
        
        canvas:
            Color:
                rgb: rgba(240, 96, 7, 1)
            RoundedRectangle:
                # radius: [44]
                size: self.size
                pos: self.pos      
        Label:
            id: image_title
            text: root.image_title
            bold: True
            line_height: .6
            font_style: "H5"
    MDLabel:
        color: get_color_from_hex("6033f2")
        halign:"center"
        text:root.image_question
        bold: True
    MDGridLayout:
        rows: 2
        spacing: 15
        image_color: (2/255, 203/255, 2/255, 1)
        Image:
            source: root.image_your_option
            halign: "center"
            bg_color: 40/255, 6/255, 109/255, 1
            canvas.before:
                Color:
                    rgb: root.image_color
                Line:
                    width: 1.5
                    rounded_rectangle: self.x-8, self.y-8, self.width+8, self.height+8, 20, 20, 20, 20, 100 # original: 10, 10, 10, 10, 100
        Image:
            source: root.image_true
            italic: True
            halign: "center"
            color: 1, 1, 1, 1
            halign:'center'
            
            canvas.before:
                Color:
                    rgb: (2/255, 203/255, 2/255, 1)
                Line:
                    width: 1.5
                    rounded_rectangle: self.x-8, self.y-8, self.width+8, self.height+8, 20, 20, 20, 20, 100 # original: 10, 10, 10, 10, 100
                    

