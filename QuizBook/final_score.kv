MDScreen:
    name: "final_score"

    correct: correct
    wrong: wrong
    success_rate: success_rate
    MDFloatLayout:
        canvas: 
            Color:
                rgb: 1, 1, 1, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                texture: 
                    Gradient.horizontal(
                    get_color_from_hex("#16222A"), 
                    get_color_from_hex("#3A6073")
                    )
        MDLabel:
            text: "Final\nScore!"
            font_size: "55sp"
            halign: "center"
            pos_hint: {'center_x': 0.5,'center_y': 0.82}
            color: 1, 1, 1, 1
            line_height: 1.1
        MDLabel:
            id: correct
            text: ""
            font_size: "40sp"
            halign: "center"
            pos_hint: {'center_x': 0.5,'center_y': 0.6}
            size_hint: .8, .12
            color: 1, 1, 1, 1
            line_height: 1.1
            canvas.before:
                Color:
                    rgb: (2/255, 203/255, 2/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]
        MDLabel:
            id: wrong
            text: ""
            font_size: "40sp"
            halign: "center"
            pos_hint: {'center_x': 0.5,'center_y': 0.46}
            size_hint: .8, .12
            color: 1, 1, 1, 1
            line_height: 1.1
            canvas.before:
                Color:
                    rgb: (255/255, 130/255, 0/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]
        MDLabel:
            id: success_rate
            text: ""
            font_size: "40sp"
            halign: "center"
            pos_hint: {'center_x': 0.5,'center_y': 0.32}
            size_hint: .8, .12
            color: 1, 1, 1, 1
            line_height: 1.1
            canvas.before:
                Color:
                    rgb:rgba(40, 6, 109, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.x, self.y + 5
                    radius: [10]
        
        Button:
            text: "Re-play!"
            font_size: "40sp"
            size_hint: .6, .12
            pos_hint: {'center_x': 0.5,'center_y': 0.12}
            background_color: 1, 1, 1, 0
            on_release: app.replay()
            canvas.before:
                Color:
                    rgb: rgba(251, 187, 29, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
