<Card>
    orientation: "vertical"
    radius: 12
    padding: "12dp", 0, "12dp", "24dp"
    ripple_behavior: True

    Image:
        source: root.source

    MDLabel:
        text: root.text
        halign: "center"
        adaptive_height: True
        
        line_height: .6
        font_size: "14sp"


<CircularElevationButton>:
    size_hint: None, None
    size: "50dp", "50dp"
    radius: self.size[0] / 2
    # md_bg_color: 0, 0, 1, 1
    icon: ""
    MDIcon:
        icon: root.icon
        halign: "center"
        valign: "center"
        size: root.size
        pos: root.pos
        font_size: root.size[0] * .6
        theme_text_color: "Custom"
        text_color: [1] * 4




