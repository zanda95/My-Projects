<SignButton>
    font_size: "80sp"
    background_color: 1, 1, 1, 0
    on_release: app.select_sign(self.text)
    canvas.before:
        Color:
            rgb: root.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.x, self.y + 10
            radius: [20]
MDScreen:
    name: "select_sign"
    MDFloatLayout:
        canvas: 
            Color:
                rgb: 1, 1, 1, 1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                texture: 
                    Gradient.horizontal(
                    get_color_from_hex("#1488CC"), 
                    get_color_from_hex("#2B32B2")
                    )
        
        FloatLayout:
            MDToolbar:
                pos_hint: {'top': 1}
                size_hint: 1,.05
                left_action_items: [["menu-left", lambda _: setattr(root.manager, 'current', 'start')]] 
                right_action_items: [["home", lambda _: setattr(root.manager, 'current', 'start')]]

            MDFloatLayout:
                size_hint: .7, .1
                pos_hint: {"center_x": .5, "center_y": .66}
